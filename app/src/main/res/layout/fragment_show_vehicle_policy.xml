<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:paddingStart="@dimen/layout_padding"
    android:paddingTop="@dimen/layout_padding"
    android:paddingEnd="@dimen/layout_padding"
    tools:context=".ui.fragment.ShowVehiclePolicyFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageButton
            android:id="@+id/iv_back_vps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/back_button_padding"
            android:src="@drawable/arrow_back"
            android:tooltipText="Back" />

        <ImageButton
            android:id="@+id/iv_copyClipBoardIcon_vps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/back_button_padding"
            android:src="@drawable/copy_clipboard_icon"
            android:tooltipText="Add Policy" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_titleName_vps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calibri_bold"
            android:paddingStart="@dimen/title_Padding"
            android:paddingEnd="@dimen/title_Padding"
            android:paddingBottom="12dp"
            android:text="Vehicle Policy"
            android:textColor="@color/title_color"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scroll_vps"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="@dimen/layout_padding"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/textView_TopMargin_vps"
                    android:fontFamily="@font/calibri"
                    android:text="Company Name"
                    android:textColor="@color/show_text_view_title"
                    android:textSize="@dimen/textView_DataSize_vps" />

                <TextView
                    android:id="@+id/tv_companyName_vps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="Lic Insurance"
                    android:textColor="@color/textView_color"
                    android:textSize="@dimen/textView_Size_vps" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/textView_TopMargin_vps"
                    android:fontFamily="@font/calibri"
                    android:text="Policy Number"
                    android:textColor="@color/show_text_view_title"
                    android:textSize="@dimen/textView_DataSize_vps" />

                <TextView
                    android:id="@+id/tv_policyNumber_vps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="Lic Insurance"
                    android:textColor="@color/textView_color"
                    android:textSize="@dimen/textView_Size_vps" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/textView_TopMargin_vps"
                    android:fontFamily="@font/calibri"
                    android:text="Vehicle Number"
                    android:textColor="@color/show_text_view_title"
                    android:textSize="@dimen/textView_DataSize_vps" />

                <TextView
                    android:id="@+id/tv_vehicleNumber_vps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="Lic Insurance"
                    android:textColor="@color/textView_color"
                    android:textSize="@dimen/textView_Size_vps" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/textView_TopMargin_vps"
                    android:fontFamily="@font/calibri"
                    android:text="Vehicle Name"
                    android:textColor="@color/show_text_view_title"
                    android:textSize="@dimen/textView_DataSize_vps" />

                <TextView
                    android:id="@+id/tv_vehicleName_vps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="Lic Insurance"
                    android:textColor="@color/textView_color"
                    android:textSize="@dimen/textView_Size_vps" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/textView_TopMargin_vps"
                    android:fontFamily="@font/calibri"
                    android:text="Purchase Date"
                    android:textColor="@color/show_text_view_title"
                    android:textSize="@dimen/textView_DataSize_vps" />

                <TextView
                    android:id="@+id/tv_purchaseDate_vps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="Lic Insurance"
                    android:textColor="@color/textView_color"
                    android:textSize="@dimen/textView_Size_vps" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/textView_TopMargin_vps"
                    android:fontFamily="@font/calibri"
                    android:text="Expiry Date"
                    android:textColor="@color/show_text_view_title"
                    android:textSize="@dimen/textView_DataSize_vps" />

                <TextView
                    android:id="@+id/tv_expiryDate_vps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="Lic Insurance"
                    android:textColor="@color/textView_color"
                    android:textSize="@dimen/textView_Size_vps" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/textView_TopMargin_vps"
                    android:fontFamily="@font/calibri"
                    android:text="Policy Amount"
                    android:textColor="@color/show_text_view_title"
                    android:textSize="@dimen/textView_DataSize_vps" />

                <TextView
                    android:id="@+id/tv_policyAmount_vps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="Lic Insurance"
                    android:textColor="@color/textView_color"
                    android:textSize="@dimen/textView_Size_vps" />

                <TextView
                    android:id="@+id/tv_policyTypeTitle_vps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/textView_TopMargin_vps"
                    android:fontFamily="@font/calibri"
                    android:text="Policy Type"
                    android:textColor="@color/show_text_view_title"
                    android:textSize="@dimen/textView_DataSize_vps"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/tv_policyType_vps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:text="Lic Insurance"
                    android:textColor="@color/textView_color"
                    android:textSize="@dimen/textView_Size_vps"
                    android:visibility="invisible"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>